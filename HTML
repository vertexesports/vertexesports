<body>
  <h1>Rock Paper Scissors</h1>
  <div class="game">
    <div class="choice" data-choice="rock">
      <img src="https://img.icons8.com/ios-filled/100/ffffff/hand-rock.png" alt="Rock"/>
      <p>Rock</p>
    </div>
    <div class="choice" data-choice="paper">
      <img src="https://img.icons8.com/ios-filled/100/ffffff/hand.png" alt="Paper"/>
      <p>Paper</p>
    </div>
    <div class="choice" data-choice="scissors">
      <img src="https://img.icons8.com/ios-filled/100/ffffff/hand-scissors.png" alt="Scissors"/>
      <p>Scissors</p>
    </div>
  </div>

  <div id="result">Make your move!</div>
  <div class="scoreboard">
    You: <span id="playerScore">0</span> - Bot: <span id="botScore">0</span>
  </div>

  <!-- Sound Effects -->
  <audio id="winSound" src="https://www.fesliyanstudios.com/play-mp3/387" preload="auto"></audio>
  <audio id="loseSound" src="https://www.fesliyanstudios.com/play-mp3/388" preload="auto"></audio>
  <audio id="drawSound" src="https://www.fesliyanstudios.com/play-mp3/396" preload="auto"></audio>

  <script>
    const choices = document.querySelectorAll('.choice');
    const result = document.getElementById('result');
    const playerScoreEl = document.getElementById('playerScore');
    const botScoreEl = document.getElementById('botScore');
    let playerScore = 0;
    let botScore = 0;

    const winSound = document.getElementById('winSound');
    const loseSound = document.getElementById('loseSound');
    const drawSound = document.getElementById('drawSound');

    const getBotChoice = () => {
      const options = ['rock', 'paper', 'scissors'];
      return options[Math.floor(Math.random() * options.length)];
    };

    const getResult = (player, bot) => {
      if (player === bot) return 'draw';
      if (
        (player === 'rock' && bot === 'scissors') ||
        (player === 'paper' && bot === 'rock') ||
        (player === 'scissors' && bot === 'paper')
      ) return 'win';
      return 'lose';
    };

    const playSound = (outcome) => {
      if (outcome === 'win') winSound.play();
      else if (outcome === 'lose') loseSound.play();
      else drawSound.play();
    };

    choices.forEach(choice => {
      choice.addEventListener('click', () => {
        const playerChoice = choice.dataset.choice;
        const botChoice = getBotChoice();
        const outcome = getResult(playerChoice, botChoice);

        let message = `You chose ${playerChoice}. Bot chose ${botChoice}. `;
        if (outcome === 'win') {
          message += "You win!";
          playerScore++;
        } else if (outcome === 'lose') {
          message += "You lose!";
          botScore++;
        } else {
          message += "It's a draw!";
        }

        result.textContent = message;
        playerScoreEl.textContent = playerScore;
        botScoreEl.textContent = botScore;

        playSound(outcome);
      });
    });
  </script>
</body>
</html>
