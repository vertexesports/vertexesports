      text-align: center;
      padding: 50px;
    }

    h1 {
      font-size: 3em;
      margin-bottom: 20px;
    }

    .game {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin: 40px 0;
    }

    .choice {
      background: #2c3e50;
      border: 2px solid #34495e;
      padding: 20px;
      border-radius: 10px;
      cursor: pointer;
      transition: transform 0.2s ease, background 0.3s;
    }

    .choice:hover {
      background: #1abc9c;
      transform: scale(1.1);
    }

    .choice img {
      width: 80px;
      height: 80px;
    }

    #result {
      font-size: 2em;
      margin-top: 30px;
      font-weight: bold;
      animation: fadeIn 0.5s ease;
    }

    @keyframes fadeIn {
      from {opacity: 0;}
      to {opacity: 1;}
    }

    .scoreboard {
      margin-top: 30px;
      font-size: 1.5em;
    }
